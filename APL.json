  "mainTemplate": {
    "parameters": [
      "payload"
    ],
    "items": [
      {
        "type": "Container",
        "id": "autoscrollDemo",
        "items": [
          {
            "type": "Text",
            "bind": [
              {
                "name": "textToAutoscroll",
